<Window x:Class="part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:part1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Module Code:"/>
            <TextBox x:Name="moduleCodeTextBox"/>
            <Label Content="Module Name:"/>
            <TextBox x:Name="moduleNameTextBox"/>
            <Label Content="Number of Credits:"/>
            <TextBox x:Name="creditsTextBox"/>
            <Label Content="Class Hours per Week:"/>
            <TextBox x:Name="classHoursTextBox"/>
            <Button Content="Add Module" Click="AddModule_Click"/>
            <Label Content="Number of Weeks in Semester:"/>
            <TextBox x:Name="weeksTextBox"/>
            <Label Content="Start Date of First Week:"/>
            <DatePicker x:Name="startDatePicker"/>
            <Button Content="Calculate Self-Study Hours" Click="CalculateSelfStudyHours_Click"/>
            <ListBox x:Name="modulesListBox"/>
        </StackPanel>

    </Grid>
</Window>
